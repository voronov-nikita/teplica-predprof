<DrawerClickableItem@MDNavigationDrawerItem>

    text_color: root.theme_cls.theme_style
    icon_color: root.theme_cls.theme_style
    ripple_color: root.theme_cls.theme_style


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "white"
    icon_color: app.theme_cls.theme_style
    focus_behavior: False



Screen:

    MDNavigationLayout:

        MDScreenManager:

            MDScreen:

                MDTopAppBar:
                    pos_hint: {"top": 1, "x":0}
                    size_hint: (1, .0)
                    md_bg_color: (0, 0 , 0, 0)
                    left_action_items: [["menu",lambda x: nav_drawer.set_state("open")]]
                    icon_color: ("#FFFFFF" if app.theme_cls.theme_style=="Dark" else "#000000")
                    color: (0, 0, 0, 0)

        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 0, 0 , 0)


            BoxLayout:
                orientation: "vertical"

                MDLabel:
                    text: "Settings"
                    size_hint: (1, .5)
                    halign: "center"
                    text_color: ("#FFFFFF" if app.theme_cls.theme_style=="Dark" else "#000000")

                MDRectangleFlatIconButton:
                    line_color: 0, 0, 0, 0
                    size_hint: (1, .5)
                    icon: "pencil"
                    text: "EDIT"
                    on_press: app.edit_call()

                MDRectangleFlatIconButton:
                    line_color: 0, 0, 0, 0
                    size_hint: (1, .5)
                    icon: "lightbulb"
                    text: "Themes"
                    on_press: app.change_color_sys()
                MDRectangleFlatIconButton:
                    line_color: 0, 0, 0, 0
                    size_hint: (1, .5)
                    icon: "text"
                    text: "Text"


