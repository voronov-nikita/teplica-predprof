<DrawerClickableItem@MDNavigationDrawerItem>

    text_color: "#FFFFFF"
    icon_color: "#FFFFFF"
    ripple_color: "#FFFFFF"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#FFFFFF"
    icon_color: "#FFFFFF"
    focus_behavior: False



MDScreen:

    MDNavigationLayout:

        MDScreenManager:

            MDScreen:

                MDTopAppBar:
                    pos_hint: {"top": 1, "x":0}
                    size_hint: (1, .0)
                    md_bg_color: (0, 0 , 0, 0)
                    left_action_items: [["menu",lambda x: nav_drawer.set_state("open")]]
                    color: (0, 0, 0, 0)

        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 0, 0 , 0)


            BoxLayout:
                orientation: "vertical"

                MDLabel:
                    text: "Settings"
                    size_hint: (1, .5)
                    halign: "center"
                    text_color: "white"

                MDRectangleFlatIconButton:
                    line_color: 0, 0, 0, 0
                    size_hint: (1, .5)
                    icon: "pencil"
                    text: "EDIT"

                MDRectangleFlatIconButton:
                    line_color: 0, 0, 0, 0
                    size_hint: (1, .5)
                    icon: "lightbulb"
                    text: "Themes"

                MDRectangleFlatIconButton:
                    line_color: 0, 0, 0, 0
                    size_hint: (1, .5)
                    icon: "text"
                    text: "Text"


